page {
  overflow-x: hidden;
}

.movie-list {
  height: auto;
  pointer-events: none;
}

.movie-list .item {
  position: relative;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx;
  transition: 0.1s;
  align-items: center;
  
}

.movie-list .item:active {
   background-color: rgba(0, 0, 0, 0.1); 
}

.movie-list .box-wrap {
  position: relative;
  display: flex;
  height: 350rpx;
}

.movie-list .item .left {
  min-width: 192rpx;
  height: 100%;
  background-color: #eee;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

.movie-list .item .right {
  overflow: hidden;
  height: 100%;
  font-size: 30rpx;
  padding-left: 24rpx;
}

.movie-list .item .right .text-wrap {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.movie-list .item .right .text-wrap .value {
  font-weight: 600;
  color: #aaa;
}

.movie-list .item .right .btn-details {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  pointer-events: auto; 
}


/* 更多 */

.more {
  width: 200rpx;
  color: #bfbfbf;
  margin: 0 auto;
  padding: 20rpx 0;
  font-size: 35rpx;
  text-align: center;
}

.more-icon {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  transform: translateY(10%);
}
