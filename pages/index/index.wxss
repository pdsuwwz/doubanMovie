page {
  padding-top: 135rpx;
  overflow-x: hidden;
}

.header {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  text-align: center;
  font-size: 40rpx;
  padding: 35rpx 0;
  border-bottom: 1px solid #eee;
  background-color: #fff;
  z-index: 1;
}

.movie-list {
  height: 2000rpx;
}

.movie-list .item {
  border-bottom: 1rpx solid #eee;
  padding: 20rpx;
  transition: 0.1s;
  align-items: center;
}

.movie-list .item:active {
  /* background-color: rgba(0, 0, 0, 0.1); */
}

.movie-list .box-wrap {
  position: relative;
  display: flex;
  height: 350rpx;
}

.movie-list .item .left {
  min-width: 192rpx;
  height: 100%;
  background-color: #eee;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

.movie-list .item .right {
  overflow: hidden;
  height: 100%;
  font-size: 30rpx;
  padding-left: 24rpx;
}

.movie-list .item .right .text-wrap {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.movie-list .item .right .text-wrap .value {
  font-weight: 600;
  color: #aaa;
}

.movie-list .item .right .btn-details {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 8rpx 25rpx;
  border-radius: 10rpx;
  color: #aaa;
  border: 1rpx solid #aaa;
  transition: .1s;
}
.movie-list .item .right .btn-details:active {
  color: #08a3f5;
  border: 1rpx solid #08a3f5;
}


